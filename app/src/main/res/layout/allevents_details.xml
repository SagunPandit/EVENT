<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/alllinear1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.75"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/alleventLabel"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="EVENTS 1"
                    android:layout_marginLeft="10dp"
                    android:textSize="30sp"
                    android:textColor="#008000"/>
                <TextView
                    android:id="@+id/alleventCategory"
                    android:layout_width="wrap_content"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="category"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:textColor="#008000"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/alleventLocation"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="LOCATION"
                    android:textSize="20sp"
                    android:textColor="#008000"/>

                <TextView
                    android:id="@+id/alleventDate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="2016/2/23"
                    android:textSize="20sp"
                    android:textColor="#008000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/alleventOrganizer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="organizer"
                    android:textSize="15sp"
                    android:textColor="#008000"/>
                <TextView
                    android:id="@+id/alleventId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="id"
                    android:textSize="15sp"
                    android:textColor="#008000"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/alleventView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="views"
                    android:textSize="15sp"
                    android:textColor="#008000"
                    android:visibility="invisible"/>
            </LinearLayout>

        </LinearLayout>
        <ImageButton
            android:id="@+id/alleventDelete"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_delete"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>