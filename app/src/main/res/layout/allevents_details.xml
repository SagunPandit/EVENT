<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alllinear1"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="2.40"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="10dp"
            card_view:cardBackgroundColor="#ccffffff"
            app:cardUseCompatPadding="false"
            android:layout_margin="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                  android:id="@+id/imageview3">
                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:visibility="gone"
                        android:scaleType="centerCrop"
                        android:id="@+id/alldownloadedimage"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@id/imageview3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageview3"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/alleventLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="EVENTS 1"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/alleventCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="category"
                    android:textSize="20sp"
                    android:visibility="gone"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/alleventLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="LOCATION"
                    android:textSize="20sp"
                    android:visibility="gone"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/alleventDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="2016/2/23"
                    android:textSize="15sp"
                    android:textColor="#808080"/>
                <TextView
                    android:id="@+id/alleventOrganizer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="organizer"
                    android:textSize="15sp"
                    android:visibility="gone"
                    android:textColor="#000000"/>
               </LinearLayout>
                    <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/alleventId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="id"
                        android:textSize="1sp"
                        android:textColor="#008000"
                        android:visibility="invisible"/>
                    <TextView
                        android:id="@+id/alleventView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="views"
                        android:textSize="1sp"
                        android:textColor="#008000"
                        android:visibility="invisible"/>
                </LinearLayout>
            </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <ImageButton
            android:id="@+id/alleventDelete"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_delete"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </LinearLayout>
</RelativeLayout>